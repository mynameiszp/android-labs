<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoSourceActivity">

    <Button
        android:id="@+id/default_video"
        android:layout_width="268dp"
        android:layout_height="63dp"
        android:layout_marginTop="148dp"
        android:backgroundTint="#b82875"
        android:text="@string/play_default_video"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/url_video"
        android:layout_width="268dp"
        android:layout_height="63dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="#b82875"
        android:text="@string/play_video_from_url"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/default_video" />

    <EditText
        android:id="@+id/url"
        android:layout_width="257dp"
        android:layout_height="57dp"
        android:autofillHints="Enter url"
        android:inputType="textUri"
        android:text="http://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ElephantsDream.mp4"
        app:layout_constraintBottom_toTopOf="@+id/url_video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/default_video" />

    <Button
        android:id="@+id/storage_video"
        android:layout_width="268dp"
        android:layout_height="63dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#b82875"
        android:text="@string/play_video_from_storage"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/url_video" />

</androidx.constraintlayout.widget.ConstraintLayout>